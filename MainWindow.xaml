<Window x:Class="PsychologicalTestsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Психологические тесты" Height="350" Width="525"
        Background="#F0F0F0"
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Выберите тип пользователя" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="TeacherButton" Content="Преподаватель" Style="{StaticResource RoundedButton}" Click="TeacherButton_Click" Margin="0,0,10,0" />
                <Button x:Name="StudentButton" Content="Студент" Style="{StaticResource RoundedButton}" Click="StudentButton_Click" />
            </StackPanel>

            <!-- Панель для ввода данных, изначально скрыта -->
            <StackPanel x:Name="InputPanel" Visibility="Collapsed">
                <TextBlock x:Name="GroupLabel" Text="Группа" FontSize="14" Margin="0,0,0,5" Visibility="Collapsed" />
                <ComboBox x:Name="GroupComboBox" Height="30" Margin="0,0,0,10" Padding="5" Visibility="Collapsed" SelectionChanged="GroupComboBox_SelectionChanged" />
                <TextBlock x:Name="UsernameLabel" Text="Имя пользователя" FontSize="14" Margin="0,0,0,5" />
                <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10" Padding="5" />
                <ComboBox x:Name="UsernameComboBox" Height="30" Margin="0,0,0,10" Padding="5" />
                <TextBlock x:Name="PasswordLabel" Text="Пароль" FontSize="14" Margin="0,0,0,5" />
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10" Padding="5"/>
                <Button x:Name="LoginButton" Content="Войти" Style="{StaticResource RoundedButton}" Click="LoginButton_Click" Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>