<Window x:Class="PsychologicalTestsApp.AddStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить студента" Height="300" Width="400"
        Background="#F0F0F0"
        Icon="images/3.png">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ФИО:" FontSize="14" Margin="0,0,0,5" />
            <TextBox x:Name="FullNameTextBox" Height="30" Margin="0,0,0,10" Padding="5" Width="310" />
            <TextBlock Text="Группа:" FontSize="14" Margin="0,0,0,5" />
            <ComboBox x:Name="GroupComboBox" Height="30" Margin="0,0,0,10" />
            <Button Content="Добавить" Height="30" Click="AddButton_Click" Foreground="White" FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2196F3" CornerRadius="5" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>