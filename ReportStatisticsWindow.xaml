<Window x:Class="PsychologicalTestsApp.ReportStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика" Height="500" Width="700"
        Background="#F0F0F0" WindowStartupLocation="CenterOwner"
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#37474F"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Выберите тему"/>
            <ComboBox x:Name="ThemeComboBox"/>
            <TextBlock Text="Выберите период"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="DatePickerFirst" SelectedDate="2000-12-31" Width="100"/>
                <DatePicker x:Name="DatePickerSecond" SelectedDate="2025-6-12" Width="100"/>
            </StackPanel>
            <Button Content="Сформировать отчёт" Style="{StaticResource ActionButton}" Click="GenerateReportButton_Click"/>
            <DataGrid x:Name="ResultsGrid" AutoGenerateColumns="False" Margin="0,10,0,0" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Тест" Binding="{Binding TestName}" Width="*" />
                    <DataGridTextColumn Header="Количество студентов" Binding="{Binding StudentCount}" Width="150" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>