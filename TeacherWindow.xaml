<Window x:Class="PsychologicalTestsApp.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель преподавателя" Height="400" Width="600"
        Background="#F0F0F0"
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Просмотр тестов" Style="{StaticResource ActionButton}" Click="ViewTestsButton_Click"/>
            <Button Content="Просмотр студентов" Style="{StaticResource ActionButton}" Click="ViewStudentsButton_Click"/>
            <Button Content="Просмотр групп" Style="{StaticResource ActionButton}" Click="ViewGroupsButton_Click"/>
            <Button Content="Отчёт прохождение тестов" Style="{StaticResource ActionButton}" Click="ReportButton_Click"/>
            <Button Content="Статистика" Style="{StaticResource ActionButton}" Click="ReportStatsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
