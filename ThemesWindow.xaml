<Window x:Class="PsychologicalTestsApp.ThemesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Темы" Height="550" Width="525"
        Background="#F0F0F0"
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Image Source="Images/2.png" Stretch="UniformToFill" Height="165" Margin="0,0,0,10"/>
            <TextBlock Text="Выберите тему:" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
            <ListBox x:Name="ThemesListBox" SelectionChanged="ThemesListBox_SelectionChanged" Margin="0,0,0,10" Height="200" />
            <Button Content="Выбрать тему" Style="{StaticResource ActionButton}" Click="SelectThemeButton_Click" 
                    HorizontalAlignment="Stretch" Margin="150,0,150,0" />
        </StackPanel>
    </Grid>
</Window>