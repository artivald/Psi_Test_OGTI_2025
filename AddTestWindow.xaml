<Window x:Class="PsychologicalTestsApp.AddTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать тест" Height="600" Width="700"
        Background="#F5F5F5" WindowStartupLocation="CenterOwner"        
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#37474F"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <!-- Название теста -->
            <TextBlock Text="Название теста"/>
            <TextBox x:Name="TestNameTextBox"/>
            <!-- Тема -->
            <TextBlock Text="Тема"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="ThemeComboBox" Width="350"/>
                <Button x:Name="AddThemeButton" Content="Добавить тему" Style="{StaticResource ActionButton}"
                        Background="#2196F3" Click="AddThemeButton_Click" Margin="10,0,0,10"/>
            </StackPanel>
            <!-- Панель для новой темы -->
            <StackPanel x:Name="NewThemePanel" Visibility="Collapsed">
                <TextBlock Text="Новая тема"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NewThemeTextBox" Width="350"/>
                    <Button Content="Сохранить" Style="{StaticResource ActionButton}" Background="#4CAF50"
                            Click="SaveThemeButton_Click"/>
                    <Button Content="Отмена" Style="{StaticResource ActionButton}" Background="#F44336"
                            Click="CancelThemeButton_Click"/>
                </StackPanel>
            </StackPanel>
            <!-- Вкладки -->
            <TabControl Height="350">
                <TabItem Header="Вопросы">
                    <StackPanel Margin="10">
                        <Button Content="Добавить вопрос" Style="{StaticResource ActionButton}" Background="#2196F3"
                                Click="AddQuestionButton_Click" HorizontalAlignment="Left"/>
                        <ScrollViewer Height="280" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="QuestionsPanel"/>
                        </ScrollViewer>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Диапазоны результатов">
                    <StackPanel Margin="10">
                        <Button Content="Добавить диапазон" Style="{StaticResource ActionButton}" Background="#2196F3"
                                Click="AddRangeButton_Click" HorizontalAlignment="Left"/>
                        <ScrollViewer Height="280" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="RangesPanel"/>
                        </ScrollViewer>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Style="{StaticResource ActionButton}" Background="#4CAF50"
                        Click="SaveButton_Click"/>
                <Button Content="Отмена" Style="{StaticResource ActionButton}" Background="#F44336"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>