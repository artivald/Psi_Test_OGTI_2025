<Window x:Class="PsychologicalTestsApp.EditTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование теста" Height="600" Width="782"
        Background="#F0F0F0">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основные поля -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Название теста:" Margin="0,0,0,5"/>
            <TextBox x:Name="TestNameTextBox" Width="750" HorizontalAlignment="Left"/>
            <TextBlock Text="Тема:" Margin="0,10,0,5"/>
            <ComboBox x:Name="ThemeComboBox" Width="750" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Вопросы -->
        <GroupBox Header="Вопросы" Grid.Row="1" Margin="0,10,0,0">
            <StackPanel>
                <ListBox x:Name="QuestionsListBox" Height="150" Width="750" HorizontalAlignment="Left" Margin="0,5" DisplayMemberPath="DisplayText"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox x:Name="QuestionTextBox" Width="350" Margin="0,0,10,0"/>
                    <Button x:Name="AddQuestionButton" Content="Добавить вопрос" Width="118" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="AddQuestionButton_Click"/>
                    <Button x:Name="EditQuestionButton" Content="Редактировать вопрос" Width="147" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="EditQuestionButton_Click"/>
                    <Button x:Name="DeleteQuestionButton" Content="Удалить вопрос" Width="100" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="DeleteQuestionButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="AddAnswerButton" Content="Добавить ответ" Width="100" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="AddAnswerButton_Click"/>
                    <Button x:Name="EditAnswerButton" Content="Редактировать ответ" Width="131" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="EditAnswerButton_Click"/>
                    <Button x:Name="DeleteAnswerButton" Content="Удалить ответ" Width="100" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="DeleteAnswerButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Диапазоны результатов -->
        <GroupBox Header="Диапазоны результатов" Grid.Row="2" Margin="0,10,0,0">
            <StackPanel>
                <ListBox x:Name="RangesListBox" Height="150" Width="750" HorizontalAlignment="Left" Margin="0,5" DisplayMemberPath="DisplayText"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox x:Name="MinScoreTextBox" Width="100" Margin="0,0,10,0" Text="0"/>
                    <TextBox x:Name="MaxScoreTextBox" Width="100" Margin="0,0,10,0" Text="0"/>
                    <TextBox x:Name="DescriptionTextBox" Width="250" Margin="0,0,10,0"/>
                    <Button x:Name="AddRangeButton" Content="Добавить диапазон" Width="120" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="AddRangeButton_Click"/>
                    <Button x:Name="EditRangeButton" Content="Редактировать диапазон" Width="120" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="EditRangeButton_Click"/>
                    <Button x:Name="DeleteRangeButton" Content="Удалить диапазон" Width="120" Height="30" Margin="0,0,5,0" Style="{StaticResource RoundedButton}" Click="DeleteRangeButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Button x:Name="SaveTestButton" Content="Сохранить" Width="120" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="SaveTestButton_Click"/>
            <Button x:Name="CancelTestButton" Content="Отмена" Width="120" Height="30" Style="{StaticResource RoundedButton}" Click="CancelTestButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
