<Window x:Class="PsychologicalTestsApp.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест" Height="600" Width="800"
        Background="#F0F0F0"
        Icon="images/3.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TestNameTextBlock" Grid.Row="0" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel x:Name="QuestionPanel" Grid.Row="1" Margin="0,0,0,20">
            <TextBlock x:Name="QuestionTextBlock" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>
            <StackPanel x:Name="AnswersPanel" Margin="20,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Назад" x:Name="BackButton" Style="{StaticResource ActionButton}" Click="BackButton_Click"/>
            <Button Content="Ответить" x:Name="AnswerButton" Style="{StaticResource ActionButton}" Click="AnswerButton_Click"/>
            <Button Content="Далее" x:Name="NextButton" Style="{StaticResource ActionButton}" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>