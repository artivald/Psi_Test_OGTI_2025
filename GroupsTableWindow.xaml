<Window x:Class="PsychologicalTestsApp.GroupsTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление группами" Height="400" Width="600"
        Background="#F0F0F0">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поле фильтра -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Фильтр по названию группы:" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBox x:Name="FilterTextBox" Width="300" TextChanged="FilterTextBox_TextChanged"/>
        </StackPanel>

        <!-- Таблица групп -->
        <DataGrid x:Name="GroupsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название группы" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AddGroupButton" Content="Добавить группу" Width="120" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="AddGroupButton_Click"/>
            <Button x:Name="EditGroupButton" Content="Редактировать группу" Width="138" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="EditGroupButton_Click"/>
            <Button x:Name="DeleteGroupButton" Content="Удалить группу" Width="120" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="DeleteGroupButton_Click"/>
            <Button x:Name="CancelGroupButton" Content="Отмена" Width="120" Height="30" Style="{StaticResource RoundedButton}" Click="CancelGroupButton_Click"/>
        </StackPanel>
    </Grid>
</Window>