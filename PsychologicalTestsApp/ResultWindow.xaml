<Window x:Class="PsychologicalTestsApp.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результат теста" Height="300" Width="400"
        Background="#F0F0F0">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock x:Name="ResultTextBlock" FontSize="16" Margin="0,0,0,150" TextWrapping="Wrap" />
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Закрыть" Height="40" Width="120" Click="CloseButton_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
