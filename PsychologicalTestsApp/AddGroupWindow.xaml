<Window x:Class="PsychologicalTestsApp.AddGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу" Height="200" Width="300"
        Background="#F0F0F0">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Название группы:" FontSize="14" Margin="0,0,0,5" />
            <TextBox x:Name="GroupNameTextBox" Height="30" Margin="0,0,0,10" Padding="5" />
            <Button Content="Добавить" Height="30" Click="AddButton_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
