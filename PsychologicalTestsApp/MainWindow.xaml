<Window x:Class="PsychologicalTestsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Psychological Tests" Height="350" Width="525"
        Background="#F0F0F0">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Выберите тип пользователя" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <ComboBox x:Name="UserTypeComboBox" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Преподаватель" />
                <ComboBoxItem Content="Студент" />
            </ComboBox>
            <TextBlock Text="Имя пользователя" FontSize="14" Margin="0,0,0,5" />
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10" Padding="5" />
            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10" Padding="5"/>
            <Button Content="Войти" Height="30" Click="LoginButton_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
