<Window x:Class="PsychologicalTestsApp.TestSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор теста" Height="411.067" Width="600"
        Background="#F0F0F0">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock Text="Выберите тест:" Margin="0,0,0,20" FontSize="16" FontWeight="Bold"/>
            <ListBox x:Name="TestsListBox" Margin="0,0,0,20" Height="250" SelectionMode="Single" />
            <Button Content="Пройти тест" Height="40" Width="200" Click="TakeTestButton_Click" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
