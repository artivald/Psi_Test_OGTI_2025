<Window x:Class="PsychologicalTestsApp.StudentsTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление студентами" Height="600" Width="800"
        Background="#F0F0F0">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <GroupBox Header="Фильтры" Grid.Row="0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Группа:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="GroupFilterComboBox" Width="200" SelectionChanged="GroupFilterComboBox_SelectionChanged" Margin="0,0,20,0"/>
                <TextBlock Text="Имя:" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBox x:Name="NameFilterTextBox" Width="250" TextChanged="NameFilterTextBox_TextChanged"/>
            </StackPanel>
        </GroupBox>

        <!-- Панель добавления/редактирования студента -->
        <StackPanel x:Name="StudentFormPanel" Grid.Row="1" Margin="0,0,0,15" Visibility="Collapsed">
            <TextBlock Text="Имя студента:" Margin="0,0,0,5"/>
            <TextBox x:Name="StudentNameTextBox" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="Группа:" Margin="0,10,0,5"/>
            <ComboBox x:Name="GroupComboBox" Width="200" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="SaveStudentButton" Content="Сохранить" Width="100" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="SaveStudentButton_Click"/>
                <Button x:Name="CancelStudentButton" Content="Отмена" Width="100" Style="{StaticResource RoundedButton}" Click="CancelStudentButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Таблица студентов -->
        <DataGrid x:Name="StudentsDataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding GroupName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="AddStudentButton" Content="Добавить студента" Width="130" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="AddStudentButton_Click"/>
            <Button x:Name="EditStudentButton" Content="Редактировать студента" Width="152" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="EditStudentButton_Click"/>
            <Button x:Name="DeleteStudentButton" Content="Удалить студента" Width="130" Height="30" Margin="0,0,10,0" Style="{StaticResource RoundedButton}" Click="DeleteStudentButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="130" Height="30" Style="{StaticResource RoundedButton}" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>